    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Language toggle functionality
            const languageToggle = document.getElementById('languageToggle');
            const englishText = document.getElementById('englishText');
            const hindiText = document.getElementById('hindiText');
            
            let isEnglish = true;
            
            languageToggle.addEventListener('click', function() {
                if (isEnglish) {
                    // Switch to Hindi
                    englishText.style.display = 'none';
                    hindiText.style.display = 'block';
                    languageToggle.textContent = 'Translate to English';
                } else {
                    // Switch to English
                    englishText.style.display = 'block';
                    hindiText.style.display = 'none';
                    languageToggle.textContent = 'Translate to Hindi';
                }
                
                isEnglish = !isEnglish;
            });
            
            // Persistent countdown functionality
            const daysElement = document.getElementById('days');
            const hoursElement = document.getElementById('hours');
            const minutesElement = document.getElementById('minutes');
            const secondsElement = document.getElementById('seconds');
            
            // Generate a unique identifier for this device/browser
            function generateDeviceId() {
                let deviceId = localStorage.getItem('fbDeviceId');
                if (!deviceId) {
                    deviceId = 'device_' + Math.random().toString(36).substring(2, 15);
                    localStorage.setItem('fbDeviceId', deviceId);
                }
                return deviceId;
            }
            
            const deviceId = generateDeviceId();
            
            // Check if countdown has already started for this device
            function getCountdownEndTime() {
                const savedEndTime = localStorage.getItem(`fbCountdownEnd_${deviceId}`);
                if (savedEndTime) {
                    return parseInt(savedEndTime);
                }
                
                // If not started yet, set end time to 7 days from now
                const endTime = Date.now() + (7 * 24 * 60 * 60 * 1000); // 7 days in milliseconds
                localStorage.setItem(`fbCountdownEnd_${deviceId}`, endTime.toString());
                return endTime;
            }
            
            const countdownEndTime = getCountdownEndTime();
            
            // Update countdown timer
            function updateCountdown() {
                const currentTime = Date.now();
                const timeRemaining = countdownEndTime - currentTime;
                
                if (timeRemaining <= 0) {
                    // Countdown finished
                    daysElement.textContent = '0';
                    hoursElement.textContent = '0';
                    minutesElement.textContent = '0';
                    secondsElement.textContent = '0';
                    return;
                }
                
                // Calculate remaining time
                const days = Math.floor(timeRemaining / (1000 * 60 * 60 * 24));
                const hours = Math.floor((timeRemaining % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((timeRemaining % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((timeRemaining % (1000 * 60)) / 1000);
                
                // Update the display
                daysElement.textContent = days;
                hoursElement.textContent = hours;
                minutesElement.textContent = minutes;
                secondsElement.textContent = seconds;
            }
            
            // Initial update
            updateCountdown();
            
            // Update countdown every second
            setInterval(updateCountdown, 1000);
            
            // Disable right-click
            document.addEventListener('contextmenu', function(e) {
                e.preventDefault();
                return false;
            });
        });
    </script>
